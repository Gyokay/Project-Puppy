extends base-layout

block append head
  link(rel='stylesheet' href='/css/alert.css')

block content
  if success
    p.success.alert= 'Success! You can now login.'
  if hasMesseges
    each msg in messeges
      p.error.alert= msg

  form(action='/login', method='post')
    .row
      .one-third.column &nbsp;
      .one-third.column
        input.u-full-width(
          type='text'
          id='usernameInput'
          name='username'
          placeholder='username'
        )
      .one-third.column &nbsp;
    .row
      .one-third.column &nbsp;
      .one-third.column
        input.u-full-width(
          type='password'
          id='passwordInput'
          name='password'
          placeholder='password'
        )
      .one-third.column &nbsp;
    .row
      .one-third.column &nbsp;
      .one-third.column
        input.u-full-width(
          class='button-primary submit'
          type='submit'
          value='Login'
        )
      .one-third.column &nbsp;

