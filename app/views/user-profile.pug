extends base-layout

block append head
  link(rel='stylesheet' href='/css/view-post.css')

block content

    .row
        .postTitle.twelve.columns
            h1 The profile of: #{username}

    .row
        .eight.columns
        .four.columns.u-max-fullwidth
            ul
                li Username:
                        p= username
                li Email:
                    p= email

            if !isOwner
                a.button.button-primary(
                    href=`/chat/${username}`
                ) Contact
    .row
      h1 #{username}'s posts
      each post in posts
        li.list-group-item
          div= post.title
          hr
          div
            img.object-fit_cover.u-full-width(src= post.imgUrls[0])
        hr