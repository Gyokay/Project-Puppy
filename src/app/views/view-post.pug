extends base-layout

block append head
  link(rel='stylesheet' href='/css/view-post.css')

block content
    a.button.button-primary(
        href=`/chat/${ownerUsername}`
    ) write the owner
    .row
        .six.columns.image
            img(
                src=imgUrls[0]
            )
    .row.postImages
        each image in imgUrls
            .six.columns.image
                img(
                    src=image
                )
    .row
        .five.columns 
            h1=title
    .row
        .six.columns.postTitle
            p Description
        .six.columns
            sapn=description
    .row
        .six.columns.postTitle
            p Owner Username
        .six.columns
            sapn=ownerUsername
    .row
        .six.columns.postTitle
            p Town
        .six.columns
            sapn=town
    .row
        .six.columns.postTitle
            p Pet Pype
        .six.columns
            sapn=petPype
    .row
        .six.columns.postTitle
            p Is Archived
        .six.columns
            sapn=isArchived

