extends base-layout

block append head
  link(rel='stylesheet' href='/css/view-post.css')

block content
    if isArchived
        h1 This post is archived

    a.button.button-primary(
        href=`/chat/${ownerUsername}`
    ) write the owner

    if isOwner && !isArchived
        button#archive.button Archive post

    .row.postImages
        each image in imgUrls
            .six.columns.image
                img(
                    src=image
                )
    .row
        .five.columns
            h1=title
    .row
        .six.columns.postTitle
            p Description
        .six.columns
            sapn=description
    .row
        .six.columns.postTitle
            p Owner Username
        .six.columns
            sapn=ownerUsername
    .row
        .six.columns.postTitle
            p Town
        .six.columns
            sapn=town
    .row
        .six.columns.postTitle
            p Pet Pype
        .six.columns
            sapn=petPype
        .six.columns
            sapn=isArchived

block append scripts
    script(src='/js/view-post.js')